<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#E53935</item>
        <item name="actionBarStyle">@style/VeniceAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="VeniceAppBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#E65100</item>
        <item name="tabSelectedTextColor">#E65100</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#F57C00</item>
    </style>
</resources>
