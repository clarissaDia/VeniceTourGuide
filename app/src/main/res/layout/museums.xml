<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/museum_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/museum_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/palazzo_ducale"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_1"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin"
        />

    <TextView
        android:id="@+id/museum_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/ducale_address"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:textSize="@dimen/text_2"
        android:layout_marginLeft="@dimen/margin"
        />

    <TextView
        android:id="@+id/museum_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/ducale_time"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:textSize="@dimen/text_2"
        android:layout_marginLeft="@dimen/margin"
        />

    <TextView
        android:id="@+id/museum_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/ducale_ticket"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:textSize="@dimen/text_2"
        android:layout_marginLeft="@dimen/margin"
        />

</LinearLayout>